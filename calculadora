    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
            margin: 0;
        }

        .calculator {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 260px;
        }

        .display {
            background-color: #222;
            color: #fff;
            font-size: 2rem;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 20px;
            height: 60px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        button {
            background-color: #f5f5f5;
            border: none;
            padding: 20px;
            font-size: 1.5rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #e0e0e0;
        }

        .star {
            font-size: 2.5rem;
            color: red;
            font-weight: bold;
            text-align: center;
            margin-top: 10px;
        }

