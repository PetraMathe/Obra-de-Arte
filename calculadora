<body>

<div class="calculator">
    <div id="display" class="display">0</div>
    <div class="buttons">
        <button onclick="appendToDisplay('1')">1</button>
        <button onclick="appendToDisplay('2')">2</button>
        <button onclick="appendToDisplay('3')">3</button>
        <button onclick="appendToDisplay('+')">+</button>

        <button onclick="appendToDisplay('4')">4</button>
        <button onclick="appendToDisplay('5')">5</button>
        <button onclick="appendToDisplay('6')">6</button>
        <button onclick="appendToDisplay('-')">-</button>

        <button onclick="appendToDisplay('7')">7</button>
        <button onclick="appendToDisplay('8')">8</button>
        <button onclick="appendToDisplay('9')">9</button>
        <button onclick="appendToDisplay('*')">*</button>

        <button onclick="appendToDisplay('0')">0</button>
        <button onclick="clearDisplay()">C</button>
        <button onclick="calculate()">=</button>
        <button onclick="appendToDisplay('/')">/</button>
    </div>
    <div id="star" class="star"></div>
</div>

<script>
    let currentInput = ''; // Variável para armazenar a entrada do usuário

    // Função para adicionar números e operadores à tela
    function appendToDisplay(value) {
        currentInput += value;
        document.getElementById('display').innerText = currentInput;
        document.getElementById('star').innerText = ''; // Limpa a estrela ao digitar
    }

    // Função para limpar a tela
    function clearDisplay() {
        currentInput = '';
        document.getElementById('display').innerText = '0';
        document.getElementById('star').innerText = ''; // Limpa a estrela
    }

    // Função para calcular a expressão
    function calculate() {
        try {
            let result = eval(currentInput); // Avalia a expressão matemática

            // Se o resultado for 13, exibe a estrela vermelha com "PT"
            if (result === 13) {
                document.getElementById('display').innerText = ''; // Limpa o display
                document.getElementById('star').innerText = '★ PT'; // Exibe estrela com as letras "PT"
            } else {
                document.getElementById('display').innerText = result; // Exibe o resultado normal
            }

            currentInput = ''; // Limpa a entrada após calcular
        } catch (error) {
            document.getElementById('display').innerText = 'Erro'; // Exibe erro em caso de problema
            currentInput = ''; // Limpa em caso de erro
        }
    }
</script>

</body>
</html>
